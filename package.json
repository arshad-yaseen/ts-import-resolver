{
    "name": "ts-import-resolver",
    "version": "0.1.1",
    "description": "Resolves TypeScript import paths to absolute file paths.",
    "main": "./dist/index.js",
    "module": "./dist/index.mjs",
    "types": "./dist/index.d.ts",
    "files": ["dist"],
    "scripts": {
        "build": "bunup",
        "dev": "bunup --watch",
        "lint": "biome check .",
        "lint:fix": "biome check --write .",
        "format": "biome format .",
        "format:fix": "biome format --write .",
        "tsc": "tsc --noEmit",
        "test": "vitest run",
        "test:watch": "vitest",
        "test:coverage": "vitest run --coverage",
        "release": "bumpp --commit --push --tag",
        "publish:ci": "pnpm publish --access public --no-git-checks",
        "prepare": "husky"
    },
    "dependencies": {},
    "devDependencies": {
        "@biomejs/biome": "^1.9.4",
        "@commitlint/cli": "^19.8.0",
        "@commitlint/config-conventional": "^19.8.0",
        "bunup": "^0.4.17",
        "bumpp": "^10.1.0",
        "husky": "^9.1.7",
        "typescript": "^5.8.3",
        "vitest": "^3.1.1"
    },
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/arshad-yaseen/ts-import-resolver.git"
    },
    "peerDependencies": {
        "typescript": ">=4.5.0"
    },
    "peerDependenciesMeta": {
        "typescript": {
            "optional": true
        }
    },
    "homepage": "https://github.com/arshad-yaseen/ts-import-resolver#readme"
}
